/* waterfall.wxss */

.waterfall {

}

.waterfall .waterfall-container {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #6B6A69;
}

.waterfall .waterfall-container .waterfall-container__image{
  flex: 1;
  font-size: 0;
  margin-right: 15rpx;
}

.waterfall .waterfall-container .waterfall-container__image .waterfall-container__image--hang{
  position: absolute;
  padding: 6rpx 10rpx;
  background: black;
}

.waterfall .waterfall-container .waterfall-container__image .waterfall-container__image--hang text{
  font-size: 24rpx;
  color: #feb70f;
}

.waterfall .waterfall-container .waterfall-container__image image{
  max-width: 140rpx;
  width: 140rpx;
  max-height: 140rpx;
  height: 140rpx;
}

.waterfall .waterfall-container .waterfall-container__info{
  flex: 5;
  padding-right: 16rpx;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--title{
  padding-bottom: 10rpx;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--title .title-left{
  vertical-align: bottom;
  font-size: 32rpx;
  font-weight: 600;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--title .title-right{
  color: red;
  margin-top: 6rpx;
  font-size: 24rpx;
  float: right;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--reason{
  padding-bottom: 10rpx;
  display: flex;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--reason .reason-left{
  flex: 2;
  white-space: nowrap;
  vertical-align: bottom;
  font-size: 24rpx;
  font-weight: 600;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--reason .reason-right{
  flex: 6;
  font-size: 24rpx;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--money{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--money .money-left{
  flex: 4;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--money .money-left .sale-price{
  display: inline-block;
  color: red;
  font-size: 32rpx;
  line-height: 16rpx;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--money .money-left .original-price{
  display: inline-block;
  margin-left: 6rpx;
  font-size: 24rpx;
  text-decoration:line-through;
  line-height: 12rpx;
}

.waterfall .waterfall-container .waterfall-container__info .waterfall-container__info--money .money-right{
  flex: 2;
  text-align: right;
  line-height: 16rpx;
  font-size: 24rpx;
}