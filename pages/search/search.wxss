.header {
  display: -webkit-flex;
  padding: 20rpx;
  background: #fff;
}

/*放大镜图标*/

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  float: left;
  margin: 1rpx 5rpx 0 0;
}

/*放大镜 文本框*/

.header .search {
  color: #000;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  background: #eee;
}

/*搜索按钮*/

.header button {
  margin-left: 20rpx;
  font-size: 30rpx;
}

/*文本框*/

.header input {
  width: 60vw;
  height: 30rpx;
  min-height: 40rpx;
}
