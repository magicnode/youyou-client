page {
  height: 100%;
}

.container {
  height: 100%;
}

scroll-view {
  height: 100%;
}

.header {
  position: fixed;
  display: flex;
  left: 0;
  top: 0;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  z-index: 1;
}

/* 定位文本长度控制 */

.header .locationName {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 顶部搜索层 背景色*/

.header.scrolled {
  background: #feb70f;
}

/* 定位 图片*/

.header .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
}

/* 定位 */

.header .location {
  color: #fff;
  font-size: 30rpx;
  line-height: 40rpx;
  min-width: 100rpx;
  max-width: 340rpx;
  padding: 10rpx 20rpx 10rpx 10rpx;
  border-radius: 30rpx;
  background: rgba(0, 0, 0, 0.3);
  margin-right: 20rpx;
  vertical-align: middle;
}

/*搜索框*/

.header .search {
  width: 60vw;
  color: #888;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 10rpx;
  border-radius: 30rpx; /*添加圆角边框*/
  background: #fff;
}

.user {
  padding-left: 10px;
}

.user .user-icon {
  width:58rpx;
  height:58rpx;
  border-radius: 50%;
}
